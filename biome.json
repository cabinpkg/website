{
    "$schema": "https://biomejs.dev/schemas/2.3.2/schema.json",
    "files": {
        "includes": ["**", "!.next/**/*", "!graphql/**/*"]
    },
    "linter": {
        "enabled": true,
        "rules": {
            "recommended": true
        }
    },
    "formatter": {
        "enabled": true,
        "indentStyle": "space",
        "indentWidth": 4
    },
    "css": {
        "parser": {
            "tailwindDirectives": true
        }
    }
}
