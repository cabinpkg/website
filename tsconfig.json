{
    "extends": "@tsconfig/next/tsconfig.json",
    "compilerOptions": {
        "target": "es2024",
        "module": "esnext",
        "moduleResolution": "bundler",

        "strict": true,
        "skipLibCheck": true,
        "noEmit": true,
        "baseUrl": ".",
        "paths": { "~/*": ["./*"] },
        "types": ["tailwindcss", "node"]
    },
    "include": ["next-env.d.ts", "**/*.ts", "**/*.tsx", ".next/types/**/*.ts"],
    "exclude": ["node_modules"]
}
